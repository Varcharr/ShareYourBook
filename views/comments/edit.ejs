<% include ../partials/header %>

<div class="container">
  <h1 class="text-center">Edit comment</h1>
  <div class="row">
    <div style="max-width:450px; margin:0 auto;">
          <form class="" action="/books/<%= bookId %>/comments/<%= comment._id %>?_method=PUT" method="POST">
            <div class="form-group">
              <textarea required class="form-control" name="comment[text]" rows="9" cols="80"><%= comment.text %></textarea>
            </div>
            <div class="form-group">
              <input class="btn btn-block btn-lg btn-warning" type="submit" value="Submit">
            </div>
          </form>
          <a class="bold" href="/books">Go Back</a>
    </div>
</div>
</div>

<% include ../partials/footer %>
