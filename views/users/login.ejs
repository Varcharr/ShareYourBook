<% include ../partials/header %>

<div class="container">
  <h1 class="text-center bold">Login</h1>
  <div class="row">
    <div style="max-width:450px; margin:0 auto;">
          <form  action="/login" method="POST">
            <div class="form-group">
              <input required class="form-control" type="text" name="username" placeholder="Username">
            </div>
            <div class="form-group">
              <input required class="form-control" type="password" name="password" placeholder="Password">
            </div>
            <div class="form-group">
              <input class="btn btn-block btn-lg btn-warning" type="submit" value="Login">
            </div>
          </form>
          <a class="bold" href="/books">Go Back</a>
    </div>
</div>
</div>

