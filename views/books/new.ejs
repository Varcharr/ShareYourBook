<% include ../partials/header %>

<div class="container">

    <h1 class="text-center bold">Add new book</h1>
    <div class="row">
      <div style="max-width:450px; margin:0 auto;">
            <form class="" action="/books" method="POST">
              <div class="form-group">
                <input required pattern=".*\S+.*" class="form-control" type="text" name="book[title]" placeholder="Title">
              </div>
              <div class="form-group">
                <input required class="form-control" type="text" name="book[image]" placeholder="Image URL">
              </div>
              <div class="form-group">
                <textarea  class="form-control" name="book[description]" rows="8" cols="80" placeholder="Description"></textarea>
              </div>
              <div class="form-group">
                <input class="btn btn-block btn-lg btn-warning" type="submit" value="Submit">
              </div>
            </form>
            <a class="bold" href="/books">Go Back</a>
      </div>
  </div>
</div>

<% include ../partials/footer %>
